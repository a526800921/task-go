<view class="top" bindtap="goAdd">
  <view class="top-icon iconfont iconadd"></view>
  <view class="top-text">发布任务</view>
</view>

<view class="task-list">
  <view class="task-list-top">
    <text class="task-list-left">标题</text>
    <text class="task-list-right">人数/上限</text>
  </view>
  <view class="task-item" wx:for="{{taskList}}" wx:key="index" bindtap="goTaskDetail" data-id="{{item._id}}">
    <task-item item="{{item}}"></task-item>
  </view>
</view>