/* miniprogram/pages/add-task/add-task.wxss */
.add-task-title {
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border);
}

.add-task-title-input {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 36rpx;
}

.add-task-main {
  padding: 20rpx;
}

.add-task-main-textarea {
  display: block;
  width: 100%;
  height: 500rpx;
}

.add-task-main-picker {
  border-top: 1rpx solid var(--border);
}

.add-task-main-picker view {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-task-main-picker .iconfont {
  font-size: 50rpx;
}

.add-task-main-slider {
  padding: 30rpx 0;
  border-top: 1rpx solid var(--border);
}

.add-task-main-slider text {

}

button.add-task-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  width: 100%;
  border-radius: 0;
}
